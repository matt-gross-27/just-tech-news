<article>
  <a href="/dashboard">⬅️ Back to Dashboard</a>
  <h2 class="mt-4">Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <input class="w-100" type="text" name="post-title" value="{{post.title}}" />
      <p>({{shorten_url post.post_url}})</p>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "like" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="btn-primary" type="submit">Save Post 💾</button>
    <button class="btn-danger" type="button" class="delete-post-btn">Delete Post 🗑</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea class="w-100" name="comment-body"></textarea>
  </div>
  <div>
    <button class="btn-primary" type="submit">Add Comment +</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>