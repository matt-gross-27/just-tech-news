<div class="row">
  <section class="login-section p-5 col-12 col-lg-6">
    <form class="login-form">
      <h2>Log In</h2>
      <div>
        <label for="email-login">Email:</label>
        <input class="w-100" type="text" id="email-login" />
      </div>
      <div>
        <label for="password-login">Password:</label>
        <input class="w-100" type="text" id="password-login" />
      </div>
      <div>
        <button class="mt-3 p-1 btn-primary" type="submit">Login</button>
      </div>
    </form>
  </section>

  <hr />
  <section class="signup-section p-5 col-12 col-lg-6">
    <form class="signup-form">
      <h2>Sign Up</h2>
      <div>
        <label for="username-signup">Username:</label>
        <input class="w-100" type="text" id="username-signup" />
      </div>
      <div>
        <label for="email-signup">Email:</label>
        <input class="w-100" type="text" id="email-signup" />
      </div>
      <div>
        <label for="password-signup">Password:</label>
        <input class="w-100" type="text" id="password-signup" />
      </div>
      <div>
        <button class="mt-3 p-1 btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </section>
</div>

{{#unless loggedIn}}
    <script src="/javascript/login.js"></script>
{{/unless}}